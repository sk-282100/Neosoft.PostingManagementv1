@model PostingManagement.UI.Models.JobFamilyModel

@{
    ViewData["Title"] = "AddJobFamily";
    Layout = "~/Views/Shared/MainView.cshtml";

}

<h1>Add Job Family</h1>
<hr />
<input type="hidden" value=@ViewBag.AddJobFamilyResponse id="addjobFamilyResponse" />
<script src="~/js/AddJobFamily.js"></script>
<div class="col-xxl-4 col-xl-12">

    <div class="card info-card customers-card">

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AddJobFamily" id="addJobFamilyForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div style="display:inline-flex;" class="w-100">
                            <div class="form-group my-3">
                                <label class="control-label">Job Family Name<i class="text-danger">*</i> </label>
                                <input asp-for="JobFamilyName" class="form-control" id="JobFamilyName" />
                            </div>
                            <div class="form-group m-3 d-flex align-items-end">
                                <input type="button" value="Save" id="addJobFamilyId" class="btn btn-success" />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xxl-4 col-xl-12">

    <div class="card info-card customers-card">

        <div class="card-body">
            <div id="assign">
                <partial name="GetAllJobFamily">
            </div>
        </div>
    </div>
</div>
<script>
    //Swal Alert For Confirmation Of Delete Role
    function Delete(id) {
        Swal.fire({
            title: 'Are you sure you want to Delete Job family?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/JobFamily/RemoveJobFamily?id=' + id;
            }
        });
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


