<style>
    #wrapper .baricon {
        display: inline-block;
        border-radius: 75%;
        padding: 6px;
        background-color: #acacad;
        color: white;
    }

    #wrapper .progress_bar {
        width: 52px;
        height: 2px;
        border-radius: 20px;
        background-color: #D8D8D8;
        display: inline-block;
    }

    span.baricon.active {
        background-color: #1aa93f !important;
    }
</style>
<div class="col-xxl-12 col-xl-12">
    <div id="wrapper" class="align-content-end d-flex justify-content-end p-3">
        <div class="">
            <span class="baricon @(step>=1?"active":" ")">1</span>
            <span id="bar1" class="progress_bar"></span>
            <span class="baricon @(step>=2?"active":" ")">2</span>
            <span id="bar2" class="progress_bar"></span>
            <span class="baricon @(step>=3?"active":" ")">3</span>
        </div>
    </div>
    <div class="card info-card customers-card">

        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h5 class="card-title">Generate Employee Transfer List<span></span></h5>
                <a class="btn btn-success" onclick="GenerateList()">Generate List</a>
            </div>
            <hr />
            <div class="row">
                
                <div class="col-md-12">
                    <table class="table responsive" id="employeeTransfer">
                        <thead>
                            <tr>
                                <th></th>
                                @*<th><input type="checkbox" name="select_all" id="example-select-all"></th>*@
                                <th></th>
                                <th>Employee Id</th>
                                <th>Name</th>  
                                <th>Scale Name</th>  
                                <th>Scale</th>  
                                <th>Designation</th>  
                                <th>Region</th>  
                                <th>Zone</th>  
                                <th>Movement Type</th>  
                                @*<th></th>*@
                                @*<th>De(Select)</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/EmployeeTransfer.js"></script>

