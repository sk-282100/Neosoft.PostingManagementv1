@model IEnumerable<PostingManagement.UI.Models.EmployeeTransferModels.EmployeeTransferModel>

@{
    ViewData["Title"] = "GetEmployeesForTransfer";
    Layout = "~/Views/Shared/MainView.cshtml";
    var step = 1;
}

<link href="~/css/datatables-1.13.1.css" rel="stylesheet" />
<link href="~/css/datatables.buttons-2.3.2.css" rel="stylesheet" />
<link href="~/css/datatables-checkboxes-1.2.12.css" rel="stylesheet" />

<script src="~/lib/jquery/dist/jquery.datatables-1.13.1.js"></script>
<script src="~/lib/jquery/dist/datatable.buttons - 2.3.2.js"></script>
<script src="~/lib/ajax/jszip-3.1.3.js"></script>
<script src="~/lib/ajax/pdfmake.min - 0.1.53 .js"></script>
<script src="~/lib/ajax/pdfmake -vfs_fonts.min - 0.1.53 .js"></script>
<script src="~/lib/jquery/dist/datatable.buttons.flash.min - 1.6.1.js"></script>
<script src="~/lib/jquery/dist/datatable.buttons.html5.min - 2.3.2.js"></script>
<script src="~/lib/jquery/dist/datatable.buttons.print.min - 2.3.2.js"></script>
<script src="~/lib/jquery/dist/jquery.datatables.checkboxes-1.2.12.js"></script>

<style>
    #wrapper .baricon {
        display: inline-block;
        border-radius: 75%;
        padding: 6px;
        background-color: #acacad;
        color: white;
    }

    #wrapper .progress_bar {
        width: 52px;
        height: 2px;
        border-radius: 20px;
        background-color: #D8D8D8;
        display: inline-block;
    }

    span.baricon.active {
        background-color: #1aa93f !important;
    }
</style>

<div class="col-xxl-12 col-xl-12">
    <div id="wrapper" class="align-content-end d-flex justify-content-end p-3">
        <div class="">
            <span class="baricon @(step>=1?"active":" ")">1</span>
            <span id="bar1" class="progress_bar"></span>
            <span class="baricon @(step>=2?"active":" ")">2</span>
            <span id="bar2" class="progress_bar"></span>
            <span class="baricon @(step>=3?"active":" ")">3</span>
        </div>
    </div>
    <div class="card info-card customers-card">

        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h5 class="card-title">Generate Employee Transfer List<span></span></h5>
                <a class="btn btn-success" onclick="GenerateList()">Generate List</a>
            </div>
            <hr />
            <div class="row">
                
                <div class="col-md-12">
                    <table class="table responsive" id="employeeTransfer">
                        <thead>
                            <tr>
                                <th></th>
                                @*<th><input type="checkbox" name="select_all" id="example-select-all"></th>*@
                                <th></th>
                                <th>Employee Id</th>
                                <th>Name</th>  
                                <th>Scale Name</th>  
                                <th>Scale</th>  
                                <th>Designation</th>  
                                <th>Region</th>  
                                <th>Zone</th>  
                                <th>Movement Type</th>  
                                <th></th>
                                @*<th>De(Select)</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/EmployeeTransfer.js"></script>

