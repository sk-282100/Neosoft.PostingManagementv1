@model PostingManagement.UI.Models.AccountModels.UserViewModel

@{
    ViewData["Title"] = "EditUserRoleDetails";
    Layout = "MainView";
}

<script src="~/js/edituserrole.js?v=1.2"></script>
<h1 class="card-title">Edit User Role</h1>

<hr />
<div class="col-xxl-4 col-xl-12">
    <div class="card info-card customers-card">
        <div class="card-body">
            <div class="row">
                <div class="col w-100">
                    <form id="EditUserForm" asp-action="EditUserRoleDetails">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="w-100 d-flex justify-content-center">

                            <input asp-for="UId" class="form-control" type="hidden" />
                            <input asp-for="UserName" class="form-control" type="hidden" />

                            <div class="form-group m-3 w-25">
                                <label asp-for="UserName" class="control-label">User Name</label>
                                <input asp-for="UserName" class="form-control" disabled />
                            </div>
                            <div class="form-group m-3 w-25">
                                <label class="control-label">Old Role</label>
                                <input value="@ViewBag.UserCurrentRole" class="form-control" disabled />
                            </div>
                            </div>
                        <div class="w-100 d-flex justify-content-center">

                            <div class="form-group m-3 w-25">
                                <label asp-for="RoleId" class="control-label">New Role</label>
                                @if (ViewBag.Roles != null)
                                {
                                    @Html.DropDownListFor(model =>model.RoleId ,ViewBag.Roles as SelectList,new { @class="form-select" })
                                }
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                            <div class="form-group m-3 w-25">
                                <label asp-for="Email" class="control-label">User Email</label>
                                <input asp-for="Email" class="form-control" maxlength="30"/>
                            </div>
                        </div>
                        <div class="w-100 d-flex justify-content-center">

                            <div class="form-group m-3 d-flex align-items-end w-25">
                                <input type="button" value="Save" id="EditUserBtn" class="btn btn-success my-4 w-100" />
                            </div>
                            <div class="form-group m-3 d-flex align-items-end w-25 ">
                                <a class="btn btn-primary my-4 w-100" asp-action="CreateUserName" asp-controller="AccountView">Back</a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<div>
    <div class="card info-card customers-card">

        <div class="card-body">

            <h5 class="card-title"> All User Details <span></span></h5>
            <hr />
            <div>
                <partial name="_ShowUserRoleDetails">
            </div>
        </div>
    </div>
</div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
