@model PostingManagement.UI.Models.AccountModels.CreateUserRequestModel

@{
    ViewData["Title"] = "CreateUserName";
    Layout = "MainView";
}
<h1 class="card-title">Create User</h1>

<hr />
<script src="~/js/createuserrole.js"></script>
<div class="col-xxl-4 col-xl-12">

    <div class="card info-card customers-card">

        <div class="card-body">

            
            <div class="row">
                <div class="col w-100">
                    <form asp-action="CreateUserName">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div style="display:inline-flex;" class="w-100">
                            <div class="form-group my-3 w-33 ">
                                <label class="control-label">Roles</label>
                                @if (ViewBag.Roles != null)
                                {
                                    @Html.DropDownListFor(model =>model.RoleId ,ViewBag.Roles as SelectList,new { @class="form-control w-50 mx-3" })
                                }
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                            <div class="form-group my-3">
                                <label class="control-label">UserName</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mx-3">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="card info-card customers-card">

        <div class="card-body">

            <h5 class="card-title"> All User Details <span></span></h5>
            <hr />
            <div>
                <partial name="ShowUserRoleDetails">
            </div>
        </div>
    </div>
</div>
<script>
    function onDelete(id) {
        Swal.fire({
            title: 'Are you sure you want to Delete User?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/AccountView/DeleteUserName?id=' + id;
            }
        });
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
