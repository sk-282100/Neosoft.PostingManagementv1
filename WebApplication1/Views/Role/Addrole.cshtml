@model PostingManagement.UI.Models.RoleModel

@{
    ViewData["Title"] = "Addrole";
    Layout = "~/Views/Shared/MainView.cshtml";
    var Roleid = ViewBag.Roleid;

}

<h1>Add New Role</h1>
<hr />
<input type="hidden" value=@ViewBag.AddRoleResponse id="addRoleResponse" />
<script src="~/js/Role.js"></script>
<div class="col-xxl-4 col-xl-12">

    <div class="card info-card customers-card">

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Addrole" id="addRoleForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div style="display:inline-flex;" class="w-100">
                            <div class="form-group my-3">
                                <label class="control-label">Role Name<i class="text-danger">*</i> </label>
                                <input asp-for="RoleName" class="form-control" id="RoleName" />
                            </div>
                            <div class="form-group m-3 d-flex align-items-end">
                                <input type="button" value="Save" id="addRoleId" class="btn btn-success" />

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xxl-4 col-xl-12">

    <div class="card info-card customers-card">

        <div class="card-body">
            <div id="assign">
                <partial name="GetAllRoles" />
            </div>
        </div>
    </div>
</div>

<script>
    //Swal Alert For Confirmation Of Delete Role
    function Delete(id) {
        Swal.fire({
            title: 'Are you sure you want to Delete Role?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Role/RemoveRole?id=' + id;
            }
        });
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
