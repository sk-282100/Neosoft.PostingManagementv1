                    <span>Requests</span>
                </a>
            </li><!-- End Inter Zonal Page Nav -->

            
        </ul>
    </aside><!-- End Sidebar-->


    <main id="main" class="main">


            
            <div class="pagetitle">
                <h1>Dashboard</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Pages</li>
                        <li class="breadcrumb-item ">Dashboard</li>
                        <li class="breadcrumb-item active">ExcelUpload</li>
                    </ol>
                </nav>

                <div class="container">

                    <h1>ExcelUpload</h1>

                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                        <form enctype="multipart/form-data" asp-action="ExcelUpload">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="FileType" class="control-label"></label>
                                    <select asp-for="FileType" class="form-control">
                                        <option value="BranchMaster">BranchMaster</option>
                                        <option value="EmployeeMaster">EmployeeMaster</option>
                                        <option value="InterRegionalPromotion">InterRegionalPromotion</option>
                                        <option value="InterRegionRequestTransfer">InterRegionRequestTransfer</option>
                                        <option value="InterZonalPromotion">InterZonalPromotion</option>
                                        <option value="InterZonalRequestTransfer">InterZonalRequestTransfer</option>
                                        <option value="RegionMaster">RegionMaster</option>
                                        <option value="ZoneMaster">ZoneMaster</option>
                                        <option value="DepartmentMaster">DepartmentMaster</option>

                                    </select>
                                    <span asp-validation-for="FileType" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ExcelFile" class="control-label"></label>

                                    <input asp-for="ExcelFile" type="file" style="width:100%" class="form-control custome-file-input" />
                                    <span asp-validation-for="ExcelFile" class="text-danger" id="ResumePathError"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>

            </div><!-- End Page Title -->
        @if (ViewBag.ExcelUploadResponse!=null){
            @if (ViewBag.ExcelUploadResponse.UploadStatus == "Success")
            {
                <h4 class="txt-success p-3 d-flex align-items-center">@ViewBag.ExcelUploadResponse.SuccessCount</h4>
            }
            else 
            {
                <h4 class="txt-danger p-3 d-flex align-items-center">Uploading Failed</h4>

            };
        }
        



        
    </main><!-- End #main -->
